server {
    listen 80;
    server_name 13.203.165.247; # Or your domain name if you have one

    access_log /var/log/nginx/rcav2_django_access.log;
    error_log /var/log/nginx/rcav2_django_error.log;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        alias /home/ubuntu/RCAv2/staticfiles/; # Path to your collected static files
        
        # Prevent aggressive caching of CSS and JS files during development
        location ~* \.(css|js)$ {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
            expires -1;
        }
        
        # Short cache for images and fonts (1 hour)
        location ~* \.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1h;
            add_header Cache-Control "public";
        }
        
        # Default: no cache for all other static files
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    location /media/ { # If you have user-uploaded media files
        alias /home/ubuntu/RCAv2/mediafiles/; # Path to your media root
    }

    location / {
        include proxy_params;
        proxy_pass http://localhost:8000; # Must match the Gunicorn bind address
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Prevent caching of HTML responses during development
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
}